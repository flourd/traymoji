{
  "name": "traymoji",
  "version": "1.0.0",
  "author": "Coen Warmer",
  "license": "GPL-3.0",
  "description": "macOS app that provides fast access to gitmoji - right from your tray!",
  "scripts": {
    "postinstall": "if ! command -v pnpm >&/dev/null; then npm i -g pnpm@6.32.2 2>/dev/null; fi",
    "dev": "nr prebuild && electron-esbuild dev",
    "build": "electron-esbuild build",
    "clean": "rm -rf dist",
    "prebuild": "mkdir -p dist/main && cp -a -R static/* dist/main/",
    "package": "electron-builder",
    "start": "[ ! -d dist/main ] && nr build; electron dist/main/."
  },
  "build": {
    "appId": "dev.flourd.traymoji",
    "productName": "traymoji",
    "extraMetadata": {
      "name": "traymoji",
      "main": "main.js"
    },
    "files": [
      {
        "from": ".",
        "filter": [
          "package.json"
        ]
      },
      {
        "from": "dist/main"
      },
      {
        "from": "dist/renderer"
      }
    ],
    "win": {
      "target": [
        "zip"
      ]
    },
    "mac": {
      "target": [
        "zip"
      ]
    },
    "linux": {
      "target": [
        "zip"
      ]
    },
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  },
  "dependencies": {
    "styled-components": "^5.3.0"
  },
  "devDependencies": {
    "@antfu/ni": "latest",
    "@types/node": "latest",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "electron-esbuild": "1.x",
    "electron-util": "^0.14.2",
    "esbuild": "0.x",
    "pnpm": "6.32.2",
    "preact": "latest",
    "preact-render-to-string": "latest",
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat",
    "react-is": ">=16.8.0",
    "typescript": "^4.2.3"
  },
  "packageManager": "pnpm@6.32.2",
  "peerDependencies": {
    "react-is": ">=16.8.0"
  }
}
